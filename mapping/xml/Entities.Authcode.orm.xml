<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Entities\Authcode" table="AuthCode">
    <indexes>
      <index name="IDX_F1D7D17719EB6921" columns="client_id"/>
      <index name="IDX_F1D7D177A76ED395" columns="user_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="UNIQ_F1D7D1775F37A13B" columns="token"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="token" type="string" column="token" length="255" nullable="false"/>
    <field name="redirectUri" type="text" column="redirect_uri" nullable="false"/>
    <field name="expiresAt" type="integer" column="expires_at" nullable="true"/>
    <field name="scope" type="string" column="scope" length="255" nullable="true"/>
    <many-to-one field="user" target-entity="Entities\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="client" target-entity="Entities\Client">
      <join-columns>
        <join-column name="client_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
